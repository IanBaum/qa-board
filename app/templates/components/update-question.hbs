{{#if updateQuestionForm}}
  <h4>Update {{question.author}}'s question'</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id ="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="title">Question</label>
        {{input value=title id ="title" placeholder=question.title}}
      </div>

      <div class="form-group">
        <label for="body">Extra Notes</label>
        {{input value=body id ="body" placeholder=question.body}}
      </div>

      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
